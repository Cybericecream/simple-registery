{
    "compilerOptions": {
        "removeComments": true,
        "outDir": "dist",
        "target": "ES2021",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true
    },
    "include": ["./src/*"],
    "exclude": ["node_modules"]
}